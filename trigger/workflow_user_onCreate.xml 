<?xml version="1.0" encoding="UTF-8"?>
<Workflow>
  <Trigger>
    <Object>User</Object>
    <Event>onCreate</Event>
    <Condition>
      <Field>specialty</Field>
      <Operator>=</Operator>
      <Value>{!specialty}</Value>
    </Condition>
    <Condition>
      <Field>preferences</Field>
      <Operator>=</Operator>
      <Value>{!preferences}</Value>
    </Condition>
    <Condition>
      <Field>location</Field>
      <Operator>=</Operator>
      <Value>{!location}</Value>
    </Condition>
  </Trigger>
  <Actions>
    <Action>
      <Type>DisplaySurveys</Type>
      <Condition>
        <Field>status</Field>
        <Operator>=</Operator>
        <Value>Active</Value>
      </Condition>
      <Action>
        <Type>CheckLoginStatus</Type>
        <Condition>
          <Field>isLoggedIn</Field>
          <Operator>=</Operator>
          <Value>true</Value>
        </Condition>
        <Action>
          <Type>ShowSkipOption</Type>
          <Condition>
            <Field>isSkipped</Field>
            <Operator>=</Operator>
            <Value>true</Value>
          </Condition>
        </Action>
        <Action>
          <Type>HideSurvey</Type>
          <Condition>
            <Field>isComplete</Field>
            <Operator>=</Operator>
            <Value>true</Value>
          </Condition>
        </Action>
      </Action>
    </Action>
    <Action>
      <Type>DownloadReports</Type>
      <Condition>
        <Field>fileFormat</Field>
        <Operator>=</Operator>
        <Value>CSV/Excel</Value>
      </Condition>
    </Action>
  </Actions>
</Workflow>